{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "%(asctime)s  - %(message)s"
      },
      "extra": {
        "format": "%(asctime)-16s  %(filename)-12s %(lineno)-6s %(funcName)-30s %(levelname)-8s %(message)s",
        "datefmt": "%m-%d %H:%M:%S"
      }
    },
  
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "extra",
        "stream": "ext://sys.stdout"
      },
  
      "info_file_handler": {
        "class": "logging.FileHandler",
        "level": "INFO",
        "formatter": "extra",
        "filename": "info.log",
        "encoding": "utf8"
      },
  
      "error_file_handler": {
        "class": "logging.FileHandler",
        "level": "ERROR",
        "formatter": "extra",
        "filename": "errors.log",
        "encoding": "utf8"
      }
    },
  
    "loggers": {
      "my_module": {
        "level": "ERROR",
        "handlers": ["console"], 
        "propagate": "no"
      }
    },
  
    "root": {
      "level": "INFO",
      "handlers": ["console", "info_file_handler", "error_file_handler"]
    }
  }